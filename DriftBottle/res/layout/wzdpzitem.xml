<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="2dip">
    <ImageView android:id="@+id/wzdpzItemLogo" android:layout_width="wrap_content" 
	android:layout_height="fill_parent" android:background="#B8B8B8"
	android:layout_gravity="left"/>
	<RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="fill_parent" 
	 android:layout_height="fill_parent">
	 <TextView android:id="@+id/wzdpzItemTitle"
		android:layout_width="wrap_content" android:layout_height="30px"
		android:textSize="14sp" android:textColor="#000000"
	/>
	 <TextView android:id="@+id/wzdpzItemContent" android:layout_below="@id/wzdpzItemTitle"
		android:textSize="14sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="30px"
		android:padding="3dip" android:ellipsize="end" android:singleLine="true"></TextView>
	 <TextView android:id="@+id/wzdpzItemTimes" android:layout_alignParentRight="true"
		android:layout_width="wrap_content" android:layout_height="30px"
		android:textSize="14sp" android:textColor="#000000"
	/>
	 </RelativeLayout>
</LinearLayout>
