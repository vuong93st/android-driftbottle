    <TextView android:layout_width="wrap_content" android:layout_below="@id/hyzygrqmTv"
    android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
    android:layout_marginTop="3dip"
    android:background="#FF8C00" android:textColor="#ffffff" android:padding="3dip"
    android:text="单身" android:id="@+id/textView1" android:layout_height="wrap_content"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_toRightOf="@id/textView1"
