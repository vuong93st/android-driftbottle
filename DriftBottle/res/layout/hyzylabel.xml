    <TextView android:layout_width="wrap_content" android:layout_toRightOf="@id/textView4"
    android:layout_alignTop="@id/textView4" android:background="#CD853F" 
    android:padding="3dip" 
    android:textColor="#ffffff" android:text="好脾气" android:layout_marginLeft="3dip"
    android:id="@+id/textView5" android:layout_height="wrap_content"></TextView>
    <TextView android:layout_width="wrap_content" android:padding="3dip"
    android:background="#CD853F" android:textColor="#ffffff" android:text="低调" 
    android:layout_toRightOf="@id/textView5" android:layout_marginLeft="3dip"
    android:layout_alignTop="@id/textView5"  android:id="@+id/textView6" 
    android:layout_height="wrap_content"></TextView>
    <TextView android:layout_width="wrap_content" android:padding="3dip"
    android:background="#8B4513" android:textColor="#ffffff" android:text="乐天派" 
    android:layout_toRightOf="@id/textView6" android:layout_marginLeft="3dip"
    android:layout_alignTop="@id/textView6"  android:id="@+id/textView7" 
    android:layout_height="wrap_content"></TextView>
    <TextView android:layout_width="fill_parent" android:background="#FF4500" 
    android:layout_height="10dip" android:id="@+id/textView8" 
    android:layout_alignParentBottom="true" ></TextView>
