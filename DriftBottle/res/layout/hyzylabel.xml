    android:id="@+id/textView2" android:layout_height="wrap_content"></TextView>
    <TextView android:layout_width="wrap_content" android:padding="3dip"
    android:background="#FF8C00" android:textColor="#ffffff" android:text="魔蝎座" 
    android:layout_toRightOf="@id/textView2" android:layout_marginLeft="3dip"
    android:layout_alignTop="@id/textView2"  android:id="@+id/textView3" 
    android:layout_height="wrap_content"></TextView>
