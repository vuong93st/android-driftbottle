<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="6dip">
    <ImageView android:id="@+id/squareWonderfulLogo" android:layout_width="wrap_content" 
	android:layout_height="60dip" 
	android:layout_gravity="left"/>
	<RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent">
	 <TextView android:id="@+id/squareWonderfulTitle"
		android:layout_width="wrap_content" android:layout_height="30px"
		android:textSize="14sp" android:textColor="#000000"
	/>
	<TextView android:id="@+id/squareWonderfulCounts" android:layout_alignParentRight="true"
		android:layout_width="wrap_content" android:layout_height="30px"
		android:textSize="14sp" android:textColor="#000000"
		android:layout_alignBottom="@id/squareWonderfulTitle"
	/>
	 <TextView android:id="@+id/squareWonderfulContent" android:layout_below="@id/squareWonderfulTitle"
		android:textSize="14sp" android:textColor="#000000" android:layout_width="fill_parent" android:layout_height="30px"
		android:padding="3dip" ></TextView>
	 </RelativeLayout>
</LinearLayout>
