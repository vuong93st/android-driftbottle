<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/loginmain_bg">
	<AnalogClock android:id="@+id/aclock"
			android:layout_width="wrap_content" android:layout_height="60px"
		/>
		<DigitalClock android:id="@+id/dclock"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingTop="15px"
			android:textColor="#ffcccc"
			android:layout_toRightOf="@id/aclock"
		/>

		<TextView android:id="@+id/loginmain_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="20sp" android:textColor="#ffffff"
			android:paddingTop="15px"
			android:layout_below="@id/aclock"
			android:layout_centerHorizontal="true"/>
		<TextView android:id="@+id/loginmain_content"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="16sp" android:paddingTop="5px" android:textColor="#ffffff"
			android:layout_below="@id/loginmain_title"
			android:layout_centerHorizontal="true"/>
		<TextView android:id="@+id/loginmain_content_sub"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="12sp" android:paddingTop="5px" android:textColor="#ffffff"
			android:layout_below="@id/loginmain_content"
			android:layout_centerHorizontal="true"/>
		<ImageButton android:id="@+id/loginmain_registerButton"
			android:layout_width="184px" android:layout_height="44px"
			android:layout_marginTop="20px"
			android:src="@drawable/registerbutton_selector"  
			android:layout_below="@id/loginmain_content_sub"
			android:layout_centerHorizontal="true"
			android:focusable="true" android:clickable="true" 
		/>
		
		<TextView android:id="@+id/loginmain_email_textview"
			android:layout_width="wrap_content" android:layout_height="35px"
			android:textSize="12sp" android:layout_marginTop="55px" android:textColor="#000000"
			android:layout_marginLeft="40px"  android:paddingTop="5px"
			android:layout_below="@id/loginmain_registerButton"
			/>
		<EditText android:id="@+id/loginmain_email_edittext"
			android:layout_width="200px"
			android:layout_height="35px"
			android:singleLine="true"
			android:layout_alignBottom="@id/loginmain_email_textview"
			android:layout_toRightOf="@id/loginmain_email_textview"
			/>
		<TextView android:id="@+id/loginmain_password_textview"
			android:layout_width="wrap_content" android:layout_height="35px" android:paddingTop="5px"
			android:textSize="12sp" android:layout_marginTop="5px" android:textColor="#000000"
			android:layout_marginLeft="40px" android:layout_below="@id/loginmain_email_textview"
			/>
		<EditText android:id="@+id/loginmain_email_edittext"
			android:layout_width="200px"
			android:layout_height="35px"
			android:inputType="textPassword"
			android:singleLine="true"
			android:layout_alignBottom="@id/loginmain_password_textview"
			android:layout_toRightOf="@id/loginmain_password_textview"
			/>
		<CheckBox android:id="@+id/loginmain_saveuserinfo_checkbox"
			android:textColor="#000000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_below="@id/loginmain_password_textview"
			android:button="@drawable/checkbox_selector"
			android:clickable="true" android:focusable="true"
		/>
		<ImageButton android:id="@+id/loginmain_loginButton"
			android:layout_width="200px" android:layout_height="30px"
			android:focusable="true" android:clickable="true" 
			android:src="@drawable/loginbutton_selector" 
			android:layout_below="@id/loginmain_saveuserinfo_checkbox"
			android:layout_centerHorizontal="true"
		/>
</RelativeLayout>
