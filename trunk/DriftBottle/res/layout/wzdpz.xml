<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:orientation="vertical" android:background="#E8E8E8"
  android:layout_height="fill_parent">
    <TextView android:background="#B8B8B8" android:id="@+id/wzdpzTitle" 
    android:layout_width="fill_parent" android:layout_height="40dip"
    android:textColor="#ffffff" android:textSize="18sp" android:gravity="center"></TextView>
    <ListView android:layout_height="wrap_content" android:layout_width="fill_parent" 
     android:layout_below="@id/wzdpzTitle"
     android:id="@+id/android:list"></ListView>
     <TextView android:layout_width="fill_parent" android:background="#FF4500" 
    android:layout_height="10dip" android:id="@+id/wzdpzBottom" 
    android:layout_alignParentBottom="true" ></TextView>
</RelativeLayout>
