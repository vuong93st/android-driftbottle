<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="50dip" 
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="wrap_content"
   android:id="@+id/relativeLayout1">
    <ImageView android:id="@+id/moreLogo" android:layout_width="wrap_content" 
	android:layout_height="wrap_content"  android:layout_marginLeft="5dip"
	android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
	<TextView android:id="@+id/moreTitle"
		android:textSize="16sp" android:textColor="#000000" android:layout_centerHorizontal="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_centerVertical="true"></TextView>
	<ImageView android:id="@+id/moreMore" android:layout_width="wrap_content" 
	android:layout_height="wrap_content" android:layout_marginRight="5dip"
	android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
