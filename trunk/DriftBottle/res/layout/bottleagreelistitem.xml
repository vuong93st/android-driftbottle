<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="fill_parent"
             android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout android:layout_below="@id/balTextViewHref" 
    android:id="@+id/relativeLayout2" android:background="@drawable/square_bottle_start"
    android:layout_width="fill_parent" android:layout_height="60dip">
    <ImageView android:id="@+id/startImage" android:layout_width="wrap_content" 
	android:layout_height="fill_parent"  android:src="@drawable/bottle_start"
	android:gravity="center_vertical"/>
    <TextView android:layout_height="wrap_content" android:id="@+id/titleTextView" 
    android:layout_toRightOf="@id/startImage"
    android:layout_alignParentRight="true" android:layout_width="wrap_content" android:padding="5dip"
    android:textColor="#000000"></TextView>
    </RelativeLayout>
    <RelativeLayout android:layout_below="@id/relativeLayout2" 
    android:id="@+id/relativeLayout3" android:background="#FFD700"
    android:layout_width="fill_parent" android:layout_height="120dip">
    <ImageView android:id="@+id/headImage" android:layout_width="wrap_content" 
	android:layout_height="wrap_content"  android:src="@drawable/head_01" android:layout_alignParentTop="true"/>
	<RelativeLayout android:layout_toRightOf="@id/headImage"
    android:id="@+id/relativeLayout4" android:background="#FFFFFF" android:layout_centerVertical="true"
    android:layout_marginRight="5dip"
    android:layout_width="fill_parent" android:layout_height="110dip">
    <TextView android:layout_height="wrap_content" android:id="@+id/contentTextView" 
    android:layout_toRightOf="@id/startImage" android:text="那一年，冠希还没有相机。 那一年，李刚还没有儿子。 那一年，师太不会和和尚抢老道， 那一年，人们也不会蛋疼。 那一年，2B我只知道是...
    "
    android:layout_alignParentRight="true" android:layout_width="wrap_content" 
    android:textColor="#000000"></TextView>
    <TextView android:layout_height="30dip" android:id="@+id/askTextView"  android:textSize="14sp"
    android:layout_alignParentBottom="true" android:text="评论(4)" android:background="#979797"
    android:layout_alignParentRight="true" android:layout_width="50dip"  android:layout_marginRight="3dip"
    android:layout_marginBottom="3dip" android:padding="3dip"
    android:textColor="#FFFFFF"></TextView>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
